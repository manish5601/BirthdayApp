@model IEnumerable<BirthdayApp.Models.BirthdayWish>

@{
    ViewData["Title"] = "My Birthday Wishes";
}

<h2 class="mb-4"><i class="fas fa-gift me-2"></i>My Birthday Wishes</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No birthday wishes received yet.</div>
}
else
{
    <div class="row">
        @foreach (var wish in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-primary">
                    <div class="card-header bg-primary text-white">
                        <strong>From:</strong> @wish.FromUserName
                        @if (wish.EmailSent)
                        {
                            <span class="badge bg-success ms-2">
                                <i class="fas fa-envelope me-1"></i>Email Sent
                            </span>
                        }
                    </div>
                    <div class="card-body">
                        <p class="card-text">@wish.WishMessage</p>
                        <small class="text-muted">Birthday: @wish.BirthdayDate.ToString("MMMM dd")</small>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Received on @wish.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                    </div>
                </div>
            </div>
        }
    </div>
} 