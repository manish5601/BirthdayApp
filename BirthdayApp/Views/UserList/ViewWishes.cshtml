@model IEnumerable<BirthdayApp.Models.BirthdayWish>

@{
    ViewData["Title"] = "Birthday Wishes";
    var selectedDate = ViewBag.SelectedDate as DateOnly?;
}

<h1>Birthday Wishes</h1>

@if (selectedDate.HasValue)
{
    <div class="mb-3">
        <h4>Wishes for @selectedDate.Value.ToString("MMMM dd, yyyy")</h4>
        <a asp-action="Index" class="btn btn-secondary">Back to User List</a>
    </div>
}
else
{
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back to User List</a>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var wish in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-primary">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <small><strong>From:</strong> @wish.FromUserName</small>
                            <small>@wish.CreatedAt.ToString("MMM dd")</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@wish.WishMessage</p>
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>To:</strong> @wish.ToUserName
                            </small>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Sent on @wish.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        @if (selectedDate.HasValue)
        {
            <p>No birthday wishes found for @selectedDate.Value.ToString("MMMM dd, yyyy").</p>
        }
        else
        {
            <p>No birthday wishes found.</p>
        }
        <p>Be the first to send a birthday wish!</p>
    </div>
} 