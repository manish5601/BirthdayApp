@{
    ViewData["Title"] = "Welcome to Birthday App";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-gradient-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">
                        <i class="fas fa-birthday-cake me-3"></i>
                        Never Miss a Birthday Again!
                    </h1>
                    <p class="lead mb-4">
                        Celebrate the special moments with your friends and family. 
                        Track birthdays, send personalized wishes, and create lasting memories.
                    </p>
                    <div class="d-flex gap-3">
                        <a asp-action="Login" class="btn btn-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <div class="position-relative">
                        <div class="bg-white bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 300px; height: 300px;">
                            <i class="fas fa-birthday-cake text-white" style="font-size: 8rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="fw-bold mb-3">Why Choose Birthday App?</h2>
                    <p class="lead text-muted">Everything you need to manage and celebrate birthdays</p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                            <h5 class="card-title fw-bold">Manage Friends & Family</h5>
                            <p class="card-text text-muted">
                                Keep track of all your loved ones' birthdays in one place. 
                                Add, edit, and organize your contacts easily.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-gift fa-2x"></i>
                            </div>
                            <h5 class="card-title fw-bold">Send Birthday Wishes</h5>
                            <p class="card-text text-muted">
                                Send personalized birthday messages to your friends and family. 
                                Make their special day even more memorable.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-calendar-alt fa-2x"></i>
                            </div>
                            <h5 class="card-title fw-bold">Smart Filtering</h5>
                            <p class="card-text text-muted">
                                Find people with the same birthday or filter by specific dates. 
                                Never forget to celebrate together!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="fw-bold mb-3">How It Works</h2>
                    <p class="lead text-muted">Get started in just a few simple steps</p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="position-relative">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <span class="fw-bold">1</span>
                        </div>
                        <h5 class="fw-bold">Register</h5>
                        <p class="text-muted">Create your account in seconds</p>
                    </div>
                </div>
                
                <div class="col-md-3 text-center">
                    <div class="position-relative">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <span class="fw-bold">2</span>
                        </div>
                        <h5 class="fw-bold">Add Friends</h5>
                        <p class="text-muted">Add your friends and family members</p>
                    </div>
                </div>
                
                <div class="col-md-3 text-center">
                    <div class="position-relative">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <span class="fw-bold">3</span>
                        </div>
                        <h5 class="fw-bold">Filter & Find</h5>
                        <p class="text-muted">Find people with same birthdays</p>
                    </div>
                </div>
                
                <div class="col-md-3 text-center">
                    <div class="position-relative">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <span class="fw-bold">4</span>
                        </div>
                        <h5 class="fw-bold">Send Wishes</h5>
                        <p class="text-muted">Send personalized birthday messages</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Ready to Start Celebrating?</h2>
            <p class="lead mb-4">Join thousands of users who never miss a birthday celebration!</p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Login Now
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style> 